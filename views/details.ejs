<!-- class registration form -->
<!-- if user is logges in then only show this form  -->
<%if (locals.user){%>
<form id="classRegForm" action="/<%= locals.type%>s/classes/register" method="POST">
    <input type="hidden" name="student_id" value="<%= locals.user._id%>">  
    <input type="hidden" name="class_id" value="<%= details._id%>">
    <input type="hidden" name="class_title" value="<%= details.title%>">
    <input type="submit" class="buttom" value="Register for this class">
</form>
<!-- else -->
<%} else{%>
<p>You have to logged in to register for this class</p>
<%}%>    